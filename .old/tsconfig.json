{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "vault",
    "rootDir": "src",
    "noEmit": true,

    "lib": ["ES2022", "DOM"],
    "strict": false,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mts"],
  "exclude": [".old/site/dist"]
}
