{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts"
  ],
  "exclude": [
    "dist"
  ]
}
